<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:int-file="http://www.springframework.org/schema/integration/file"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
       http://www.springframework.org/schema/integration/file  https://www.springframework.org/schema/integration/file/spring-integration-file.xsd">
    <int:channel id="inbound-channel"/>
    <int:channel id="outbound-channel"/>
    <int:channel id="file-event-messages"/>

    <int:transformer id="fileToMessageTransformer" ref="fileEventTransformer"
                     input-channel="inbound-channel" output-channel="file-event-messages"/>

    <int:service-activator input-channel="file-event-messages"
                           output-channel="outbound-channel"
                           ref="fileMessageSenderGateway" />

    <int-file:inbound-channel-adapter directory="${inbound.directory-path}"
                                      auto-startup="true" channel="inbound-channel"
                                      filename-regex="${inbound.filename.regex}"
                                      id="fileListener">
                                      <int:poller id="filePoller"
                                                  fixed-delay="${inbound.file-poller-fixed-delay}"
                                                  max-messages-per-poll="${inbound.file-poller-max-messages-per-poll}"/>

    </int-file:inbound-channel-adapter>
</beans>